<h1>Hello, Rails!</h1>
<h1>Articles</h1>
<!-- Our blog has <%#= Article.public_count %> articles and counting! -->
<ul>
  <% @articles.each do |article| %>
    <% if article.present? %>
      <li>
        <%= article.title %>
      </li>
    <% else %>
      <%= "Article not found" %>
    <% end %>
  <% end %>
</ul>


<h1>Articles</h1>
<ul>
  <% @articles.each do |article| %>
  <% unless article.archived? %>
    <li>
      <%= link_to article.title, article %>
    </li>
    <% end %>
  <% end %>
</ul>
<%= link_to "New Article", new_article_path %>
